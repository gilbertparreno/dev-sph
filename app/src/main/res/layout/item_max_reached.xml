<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginLeft="@dimen/mp_quarter"
    android:layout_marginRight="@dimen/mp_quarter"
    android:paddingBottom="@dimen/mp_quarter"
    android:paddingTop="@dimen/mp_quarter">

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/mp_half"
        android:layout_toStartOf="@id/tvMax"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/tvMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/lbl_end_reached"
        android:textSize="@dimen/text_xs"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/mp_half"
        android:layout_toEndOf="@id/tvMax"
        android:background="@android:color/white" />
</RelativeLayout>